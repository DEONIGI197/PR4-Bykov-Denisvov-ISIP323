<Window x:Class="Praktika4_Bykov_Denisov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая работа 4 — Быков и Денисов"
        Width="900" Height="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна (для перетаскивания) -->
        <Border Grid.Row="0" 
                Background="#2D2D2D" 
                MouseLeftButtonDown="TitleBar_MouseDown">
            <Grid>
                <TextBlock Text="Практическая работа 4 — Быков и Денисов" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="10,0"
                           FontSize="14"/>
                <Button x:Name="CloseButton"
                        Content="✕" 
                        Width="30" 
                        Height="30" 
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="16"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левое меню -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <StackPanel Margin="15">
                    <TextBlock Text="ЗАДАНИЯ" 
                               FontWeight="Bold" 
                               Foreground="#2D2D2D"
                               FontSize="16"
                               Margin="0,15,0,15"/>

                    <Button Content="Задание 1" 
                            Height="40" 
                            Margin="0,5,0,5"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="Button_OpenPage1"/>

                    <Button Content="Задание 2" 
                            Height="40" 
                            Margin="0,5,0,5"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="Button_OpenPage2"/>

                    <Button Content="Задание 3" 
                            Height="40" 
                            Margin="0,5,0,5"
                            Background="White"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="Button_OpenPage3"/>

                    <Border Height="1" Background="#E0E0E0" Margin="0,15,0,15"/>

                    <Button Content="← Вернуться назад" 
                            Height="40" 
                            Margin="0,5,0,5"
                            Background="#2D2D2D"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Button_GoBack"/>
                </StackPanel>
            </Border>

            <!-- Фрейм для страниц -->
            <Frame x:Name="MainFrame" 
                   Grid.Column="1" 
                   NavigationUIVisibility="Hidden"
                   Background="White"/>
        </Grid>
    </Grid>
</Window>