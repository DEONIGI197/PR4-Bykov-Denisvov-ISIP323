<Page x:Class="Praktika4_Bykov_Denisov.Task1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Задание 1"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="25">

            <TextBlock Text="Задание 1" 
                       FontSize="28" 
                       FontWeight="SemiBold"
                       Foreground="#2D2D2D"
                       Margin="0,0,0,20"/>

            <Image Source="/моя_функция_1.png" 
       Height="130" 
       Margin="0,0,0,25"
       Stretch="Uniform"
       HorizontalAlignment="Left"/>

            <Border Background="#F8F8F8" 
                    Padding="20" 
                    Margin="0,0,0,25"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="5">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="x:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"
                               FontSize="15"/>
                    <TextBox x:Name="Task1_x" 
                             Grid.Row="0" Grid.Column="1" 
                             Height="35" 
                             Padding="8"
                             BorderBrush="#CCCCCC" 
                             BorderThickness="1"
                             FontSize="14"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="y:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"
                               FontSize="15"/>
                    <TextBox x:Name="Task1_y" 
                             Grid.Row="1" Grid.Column="1" 
                             Height="35" 
                             Padding="8"
                             BorderBrush="#CCCCCC" 
                             BorderThickness="1"
                             FontSize="14"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="z:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"
                               FontSize="15"/>
                    <TextBox x:Name="Task1_z" 
                             Grid.Row="2" Grid.Column="1" 
                             Height="35" 
                             Padding="8"
                             BorderBrush="#CCCCCC" 
                             BorderThickness="1"
                             FontSize="14"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Результат:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"
                               FontSize="15"/>
                    <TextBox x:Name="Task1_Result" 
                             Grid.Row="3" Grid.Column="1" 
                             Height="35" 
                             Padding="8"
                             BorderBrush="#CCCCCC" 
                             BorderThickness="1"
                             FontSize="14"
                             IsReadOnly="True"
                             Background="#F0F0F0"/>
                </Grid>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Вычислить" 
                        Width="110" Height="40"
                        Background="#2D2D2D"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="15"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="Button_Calculate1"/>

                <Button Content="Очистить" 
                        Width="110" Height="40"
                        Background="#666666"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="15"
                        Cursor="Hand"
                        Click="Button_Clear1"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>