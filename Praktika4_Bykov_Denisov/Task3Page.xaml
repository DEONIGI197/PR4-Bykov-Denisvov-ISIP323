<Page x:Class="Praktika4_Bykov_Denisov.Task3Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:oxy="http://oxyplot.org/wpf"
      Title="Задание 3"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="25">

            <TextBlock Text="Задание 3" 
                       FontSize="28" 
                       FontWeight="SemiBold"
                       Foreground="#2D2D2D"
                       Margin="0,0,0,20"/>

            <Image Source="/моя_функция_3.png" 
Height="130" 
Margin="0,0,0,25"
Stretch="Uniform"
HorizontalAlignment="Left"/>

            <!-- Параметры цикла -->
            <Border Background="#F8F8F8" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="5">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="45"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="x₀:" VerticalAlignment="Center" FontSize="14"/>
                    <TextBox x:Name="Task3_x0" Grid.Row="0" Grid.Column="1" Height="32" Padding="5" Text="-1.5"/>

                    <TextBlock Grid.Row="0" Grid.Column="3" Text="xₖ:" VerticalAlignment="Center" FontSize="14"/>
                    <TextBox x:Name="Task3_xk" Grid.Row="0" Grid.Column="4" Height="32" Padding="5" Text="3.5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="dx:" VerticalAlignment="Center" FontSize="14"/>
                    <TextBox x:Name="Task3_dx" Grid.Row="1" Grid.Column="1" Height="32" Padding="5" Text="0.5"/>

                    <TextBlock Grid.Row="1" Grid.Column="3" Text="a:" VerticalAlignment="Center" FontSize="14"/>
                    <TextBox x:Name="Task3_a" Grid.Row="1" Grid.Column="4" Height="32" Padding="5" Text="-1.25"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="b:" VerticalAlignment="Center" FontSize="14"/>
                    <TextBox x:Name="Task3_b" Grid.Row="2" Grid.Column="1" Height="32" Padding="5" Text="-1.5"/>

                    <TextBlock Grid.Row="2" Grid.Column="3" Text="c:" VerticalAlignment="Center" FontSize="14"/>
                    <TextBox x:Name="Task3_c" Grid.Row="2" Grid.Column="4" Height="32" Padding="5" Text="0.75"/>
                </Grid>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                <Button Content="Вычислить" 
                        Width="110" Height="40"
                        Background="#2D2D2D"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Cursor="Hand"
                        Click="Button_Calculate3"/>

                <Button Content="Очистить" 
                        Width="110" Height="40"
                        Background="#666666"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand"
                        Click="Button_Clear3"/>
            </StackPanel>

            <Border Background="#F8F8F8" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="5">

                <StackPanel>
                    <TextBlock Text="Результаты вычислений:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBox x:Name="Task3_Results" 
                             Height="150"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             IsReadOnly="True"
                             Background="White"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Padding="8"
                             FontFamily="Consolas"
                             FontSize="13"/>
                </StackPanel>
            </Border>

            <Border Background="#F8F8F8" 
                    Padding="20"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="5">

                <StackPanel>
                    <TextBlock Text="График функции:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <oxy:PlotView x:Name="PlotView" 
                                  Height="300"
                                  Model="{Binding PlotModel}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
